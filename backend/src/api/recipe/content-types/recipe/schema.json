{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipe"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 200,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "maxLength": 1000,
      "required": true
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "galleryImage": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "ingredients": {
      "type": "component",
      "component": "recipe.ingredient",
      "repeatable": true,
      "required": true
    },
    "instructions": {
      "type": "component",
      "component": "recipe.instruction",
      "repeatable": true,
      "required": true
    },
    "prepTime": {
      "type": "integer",
      "required": true
    },
    "cookTime": {
      "type": "integer",
      "required": true
    },
    "servings": {
      "type": "integer",
      "required": true,
      "default": 4,
      "min": 1
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "easy",
        "medium",
        "hard"
      ]
    },
    "categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "recipe"
    },
    "tags": {
      "type": "json"
    }
  }
}
